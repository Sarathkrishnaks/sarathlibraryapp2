    <script>

let book = document.getElementById("book");
 let title =  document.getElementById("title");
function validate()
     {
       let regexp=/^([A-Za-z\.]+)?$/
       if(title.value==""){
      book.style.color="red";
      book.innerHTML = "Field is empty";
      title.style.border = "2px solid red";
      return false;
    }
    else if(regexp.test(title.value)){
      book.style.color="green";
      book.innerHTML = "Success";
    title.style.border = "2px solid green";
      return true;
    }
    else{
      book.style.color="red";
      book.innerHTML = "Alphabet are only allowed";
      title.style.border = "2px solid red";
      return false;
    }
    
  }

  

